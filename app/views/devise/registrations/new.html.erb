<div class="sign-overlay">
  <div class="sign-panel">
    <div class="card">
      <div class="card-header">
        <h6>註冊開始使用Khroma！</h6>
        <div class="close-btn pull-right">&#10005;</div>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "電子郵件", class: "form-control" %>
            <% if resource.errors[:email].any? %>
              <span style="color: red" >Email <%=  resource.errors[:email].to_sentence %></span>
            <% end %>
          </div>
          <div class="field form-group">
            <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "密碼（ 至少#{@minimum_password_length}位 ）",class: "form-control" %>
            <% if resource.errors[:password].any? %>
              <span style="color: red" >Password <%=  resource.errors[:password].to_sentence %></span>
            <% end %>
          </div>
          <div class="field form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", required: true, placeholder: "密碼確認",class: "form-control" %>
            <% if resource.errors[:password_confirmation].any? %>
              <span style="color: red" >Confirmation password <%=  resource.errors[:password_confirmation].to_sentence %></span>
            <% end %>
          </div>
          <div class="actions">
               <%= f.submit "註冊",class: "btn btn-primary sign-btn" %>
          </div>
        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <p><%= link_to "忘記密碼?", new_password_path(resource_name) %></p>
        <% end -%>
        <hr />
        <p>已經擁有帳戶？<%= link_to "登入", new_session_path(resource_name),remote: true  %></p>
      </div>
    </div>
  </div>
</div>