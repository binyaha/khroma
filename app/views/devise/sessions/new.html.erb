<div class="sign-overlay">
  <div class="sign-panel">
    <div class="card">
      <div class="card-header">
        <h6>登入您的 Khroma 帳戶</h6>
        <div class="close-btn pull-right">&#10005;</div>
      </div>
      <div class="card-body">
        <%= render "devise/shared/links" %>
        <p>或</p>
        <% if flash[:alert] %>
          <span style="color: red" ><%= flash[:alert] %></span>
        <% end %> 
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "電子郵件", class: "form-control" %>
          </div>
          <div class="field form-group">
            <%= f.password_field :password, autocomplete: "off", required: true, placeholder: "密碼",class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "登入", class: "btn btn-primary sign-btn" %>
          </div>
        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <p><%= link_to "忘記密碼?", new_password_path(resource_name), remote: true %></p>
        <% end -%>
        <hr />
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <p>還沒有帳戶嗎？<%= link_to "註冊", new_registration_path(resource_name), remote: true %></p>
        <% end -%>
      </div>
    </div>
  </div>
</div>



