<div class = "container">

  <%= render partial: "shared/admin_nav" %>
  <h2>編輯項目</h2>
    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <% @styles.first.attributes.each do |key,value|  %>
            <th scope="col"><%= key %></th>
          <% end %>

        </tr>
      </thead>
      <tbody>
       
          <tr>
            <% @style.attributes.each do |key,value|  %>
              <td><%= value %></td>
            <% end %>

          </tr>
     
      </tbody>
    </table>

  <h2>編輯區</h2>
  <div class = "row">
    <div class = "col-4">
      <%= form_for [:admin,@style] do |f| %>
        <div class = "form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
          <%= f.collection_select :type_id, @types, :id , :id_with_name, option = {prompt: "選個款式吧"}, {class: "form-control"} %>
          <br>
        <%= f.submit "確認", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

</div>